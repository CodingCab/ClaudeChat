# Authentication Configuration
SESSION_SECRET=your-session-secret-here-change-this-in-production
JWT_SECRET=your-jwt-secret-here-change-this-in-production

# Default admin credentials (change these!)
ADMIN_USERNAME=your-username-here
ADMIN_PASSWORD=your-password-here

# Server Configuration
PORT=3000
NODE_ENV=production

# Ngrok Configuration (optional)
# Set ENABLE_NGROK=false to disable ngrok tunnel
ENABLE_NGROK=true

# Ngrok authtoken (get one free at https://ngrok.com)
# Required for stable tunnels and custom domains
NGROK_AUTHTOKEN=your-ngrok-authtoken-here

# Ngrok region (us, eu, ap, au, sa, jp, in)
NGROK_REGION=us

# Ngrok subdomain (requires paid ngrok account)
# NGROK_SUBDOMAIN=your-subdomain